# LLM API Configuration
# Use DeepSeek API (default) or OpenAI
DEEPSEEK_API_KEY=your_deepseek_api_key_here
OPENAI_API_KEY=your_openai_api_key_here  # Required for embeddings (DeepSeek doesn't support embeddings)

# LLM Provider: "deepseek" or "openai"
# Note: Embeddings always use OpenAI's text-embedding-3-small regardless of this setting
LLM_PROVIDER=deepseek

# Application Configuration
LOG_LEVEL=INFO
ENVIRONMENT=development

# Threshold Configuration (tunable during evaluation)
MIN_CONFIDENCE_THRESHOLD=0.7
HIGH_CONFIDENCE_THRESHOLD=0.85
HIGH_RISK_THRESHOLD=0.7
TEMPLATE_SIMILARITY_THRESHOLD=0.9
MIN_RETRIEVAL_SCORE=0.75

# Vector Database Configuration
VECTOR_DB_PATH=./data/vector_db

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
